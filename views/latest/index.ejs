<div class="body h-screen">
    <div class="flex flex-col sm:flex-row justify-center items-center">
        <div data-simplebar class="h-screen w-full overflow-auto">
            <table>
                <thead class="bg-slate-50 border-b border-slate-200">
                    <tr>
                        <th scope="col"
                            class="px-6 py-3 sticky top-0 bg-white text-left text-sm font-medium text-slate-900">
                            Name
                        </th>
                        <th scope="col"
                            class="px-6 py-3 sticky top-0 bg-white text-left text-sm font-medium text-slate-900">
                            Title
                        </th>
                        <th scope="col"
                            class="px-6 py-3 sticky top-0 bg-white text-left text-sm font-medium text-slate-900">
                            Email
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% response.data.forEach((data)=> {%>
                        <tr class="odd:bg-white even:bg-slate-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                                <%= data.height%>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                                <%= data.previous_hash%>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-slate-900">
                                <%= data.proof%>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>